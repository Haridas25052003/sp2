<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
        
        
        <beans>
           <bean id="s1" class="com.model.Student">
            <property name="details" value="details">
             <map>
              <entry key="color">
              <list>
               <value>white</value>
               <value>green</value>
               <value>red</value>
               <value>orange</value>
              </list>
              </entry>
              <entry key="hobbies">
              <list>
               <value>reading</value>
               <value>swimming</value>
               <value>writing</value>
               <value>coding</value>
              </list>
              </entry>
             </map>
            </property>
           </bean>
        
        </beans>